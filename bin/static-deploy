#!/bin/sh

wget -x -nH -r -P static/$1 $2
cd static/$1 > /dev/null
curl -R -O ${2}/404.html
for file in css/*.css\?*; do mv "$file" "${file%%\?*}"; done
for file in js/*.js\?*; do mv "$file" "${file%%\?*}"; done
cd -
cp static/2012/.htaccess static/$1/.htaccess
rsync -avze 'ssh -p 22' --delete static/$1/ linode:www/tweetyourbracket.com/public_html/$1/
